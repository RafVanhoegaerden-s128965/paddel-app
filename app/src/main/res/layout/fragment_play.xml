<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.play.PlayFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/clubContainer"/>

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="Find your perfect match"
            android:textColor="#000000"
            android:textSize="32sp" />

        <Button
            android:id="@+id/btnBookCourt"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_below="@id/titleTextView"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:text="Book a court" />

        <Button
            android:id="@+id/btnCreateMatch"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_below="@+id/titleTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:text="Create a Match"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleTextView" />

        <TextView
            android:id="@+id/clubsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnBookCourt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="Your Clubs"
            android:textColor="#000000"
            android:textSize="32sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clubsTextView"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32dp"/>

    </RelativeLayout>
</ScrollView>
