<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        tools:context=".ui.play.PlayFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="Find your perfect match"
            android:textColor="#000000"
            android:textSize="32sp" />

        <Button
            android:id="@+id/btnBookCourt"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_below="@id/titleTextView"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:text="Book a court" />

        <Button
            android:id="@+id/btnCreateMatch"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_below="@+id/titleTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:text="Create a Match"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleTextView" />

        <TextView
            android:id="@+id/clubsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnBookCourt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="Your Clubs"
            android:textColor="#000000"
            android:textSize="32sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clubsTextView"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/clubName1TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Club 1"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/clubAdress1TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adress 1"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/clubHours1TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open/Closed Hours 1"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/clubClosed1TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Closed Days 1"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/clubPrice1TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price 1"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardView1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/clubName2TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Club 2"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/clubAdress2TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adress 2"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/clubHours2TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open/Closed Hours 2"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/clubClosed2TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Closed Days 2"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/clubPrice2TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price 2"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardView2"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/clubName3TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Club 3"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/clubAdress3TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adress 3"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/clubHours3TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open/Closed Hours 3"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/clubClosed3TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Closed Days 2"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/clubPrice3TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price 3"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>